@{
    Layout = "_LoginLayout";
}
<div>
    <form method="post" asp-controller="Login" asp-action="ResetPassword">
        <h2>Welcome KrishnaVeni</h2>
        <p>Please Provide the new password Below</p>


        <div>
            <label>New Password:</label>
            <input type="password" id="txtPassword" name="txtPassword" class="input-control" />
        </div>
        <div>
            <label>Confirm Password:</label>
            <input type="password" id="txtPassword" name="txtPassword" class="input-control" />
        </div>
        <div>
            <button type="button" class="btn btn-warning"><a asp-controller="Login" asp-action="Login">Reset Password</a></button>
            <a><button type="reset" class="btn btn-secondary"><a asp-controller="Login" asp-action="Login">Back to Login</a></button></a>

        </div>
    </form>
</div>