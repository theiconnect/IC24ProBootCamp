@{

	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_LoginLayout.cshtml";

}


<div>
	<form method="post" asp-controller="Login" asp-action="Login">
		<div>
			<label>Email/Phone:</label>
			<input type="text" id="txtEmail" name="txtEmail" class="input-control" />
		</div>
		<div>
			<label>Password:</label>
			<input type="password" id="txtPassword" name="txtPassword" class="input-control" />
		</div>
		<div>
			<a asp-controller="Login" asp-action="SendOtp">Forgot Password</a>
		</div>
		<div>
			@* <input type="submit" value="" id="btnLogin"  class="btn-login" /> *@
			<button type="submit"  class="btn btn-info" asp-action="StoreList" asp-controller="Store" style="margin-left:150px;text-align:center"><i class="bi bi-search"></i>Login -></button>
		</div>
	</form>
</div>