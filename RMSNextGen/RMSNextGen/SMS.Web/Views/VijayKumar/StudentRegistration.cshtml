@model SMS.Web.Models.GVijayStudentModel
@{
	ViewData["Title"] = "StudentRegistration";
	Layout = null;
}


<h1>StudentRegistration</h1>
<form method="post">
	<div>
		<label>Student Code</label>
		<input asp-for="StudentCode" />
	</div>
	<div>
		<label>Student Name  </label>
		<input asp-for="StudentName" />
	</div>
	<div>
		<label>DOB</label>
		<input type="date" asp-for="DOB" />
	</div>
	<div>
		<label>Gender</label>
		<input type="radio" asp-for="Gender" value="Male"  />Male
		<input type="radio" asp-for="Gender" value="Female" />Female
	</div>
	<div>
		<label>Grade</label>
		<select asp-for="Grade">
			<option>Select</option>
			<option>Grade-1</option>
			<option>Grade-2</option>
			<option>Grade-3</option>
			<option>Grade-4</option>
			<option>Grade-5</option>
			<option>Grade-6</option>
			<option>Grade-7</option>
		</select>
	</div>

	<div>
		<label>Own Transport?</label>
		<input type="checkbox" asp-for="IsOwnTransport" />
	</div>
	<div>
		<label>Comments</label>
		<textarea asp-for="Comments">
		</textarea>
	</div>
	<div>
		<input type="submit" value="Save"/>
	</div>
	<div>
		<label style="color:green">@ViewBag.Message</label>
	</div>

</form>
    @if(ViewBag.Response == true)
{
	<script>
		alert("Employee saved successfully")
		window.location.href = "VijayKumar/StudentRegistration";
	</script>
}
else
{
	<script>
		alert("Unable to save employee details")

	</script>
	
	
}

