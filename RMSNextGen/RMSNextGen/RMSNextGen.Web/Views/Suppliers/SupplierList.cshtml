@* @model List<RMSNextGen.Models.SupplierListDTO> *@
@model RMSNextGen.Web.Models.SearchSupplierViewModel
	


@{

	ViewData["Title"] = "SupplierList";
	Layout = "~/Views/Shared/_RMSLayout.cshtml";
}


<div class="container">
<div class="justify-content-between align-items-center">
	@* <h3 class="text-primary">Stores - </h3> *@
	<hr class="mt-0" />
	<h4 class="text-secondary">Suppliers/Search Suppliers</h4>
</div>

<form method="post" asp-action="SupplierList" asp-controller="Suppliers">
	<div class="card shadow-sm p-2">
		<div class="row g-3">
			<div class="col-sm-5 mr-1 px-2">
				<label for="SupplierName" class="form-label">SupplierName</label>
				<input type="text" class="form-control" id="SupplierName" asp-for="SupplierName" placeholder="Enter SupplierName">
			</div>
			<div class="col-sm-5 mr-1 px-2">
				<label for="CompanyName" class="form-label">CompanyName</label>
				<input type="text" class="form-control" id="CompanyName" asp-for="CompanyName" placeholder="Enter CompanyName">
			</div>
				<div class="col-sm-5 mr-1 px-2">
					<label for="Address" class="form-label">Address</label>
					<input type="text" class="form-control" id="Address" asp-for="Address" placeholder="Enter Address">
				</div>
			@* <div class="col-sm-5 mr-1 px-2">
				<label for="PhoneNumber" class="form-label">PhoneNumber</label>
				<input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" placeholder="Enter PhoneNumber">
			</div>*@
			
			
		</div>
	</div>
	<div class="d-flex justify-content-end gap-2 mt-3">
		<button type="reset" class="btn btn-reset"><i class="bi bi-arrow-counterclockwise"></i> Clear</button>


		<button type="submit" class="btn btn-success"><i class="bi bi-search"></i> Search</button>
		<a class="btn btn-info" asp-action="AddNewSupplier" asp-controller="Suppliers">
			<i class="bi bi-plus-circle"></i> Add New Supplier
		</a>
	</div>

</form>
@* <hr class="mt-0" /> *@
<div class="table-responsive mt-2 p-2">
	<table class="table table-bordered table-hover shadow-sm">
		<thead class="table-dark">
			<tr>
				<th scope="col">S.NO</th>
				<th scope="col">SupplierName</th>
				<th scope="col">CompanyName</th>
				<th scope="col">Address</th>
				@* <th scope="col">City</th>
				<th scope="col">State</th>
				<th scope="col">Status</th> *@
				<th scope="col" class="text-center">Actions</th>
			</tr>
		</thead>
		<tbody>
				@{
					int i = 1;
				}
				@if (ViewBag.supplier != null && ViewBag.supplier.Count > 0)
				{
					@foreach (var item in ViewBag.supplier)
					{
						<tr>
							<td>@(i++)</td> <!-- Serial Number -->
							<td>@item.SupplierName</td>
							<td>@item.CompanyName</td>
							<td>@item.Address</td>
							<td class="text-center">
								<a asp-controller="Suppliers" asp-action="EditSupplier" asp-route-SupplierID="@(item.SupplierID)" class="btn btn-sm btn-warning">Edit</a>
								<a asp-controller="Suppliers" asp-action="ViewSupplier" class="btn btn-sm btn-info">View</a>
							</td>
						</tr>
					}
				}
				
				
			
		</tbody>
	</table>
</div>
</div>

