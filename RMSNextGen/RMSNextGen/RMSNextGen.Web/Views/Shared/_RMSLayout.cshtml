<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>RMSNextGen</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/lib/fontawesome-iconpicker/css/fontawesome-iconpicker.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/site.css" />
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	@* <script src="~/lib/fontawesome-iconpicker/js/fontawesome-iconpicker.min.js"></script> *@
	<style>
		* {
			font-family: "Segoe UI,Arial,sans-serif" !important;
			font-size: 16px;
			/*border:1px solid black;*/
		}

		/* .row * {
					padding: 0;
				}
		 */
		.row {
			--bs-gutter-x: 0 !important;
		}

		#dvPage {
			/* min-height: 480px; */
		}

		#dvMenu {
			background-color: #0962ab;
			color: white;
		}

		.row.dvChildMenu {
			background-color: #005398;
		}



		#imgHamburger {
			background-color: white;
			padding: 5px;
			border: 2px solid gray;
			border-radius: 7px;
			margin: 3px;
			margin-left: 7px;
		}

		#imgProfile {
			/* float:right;*/
			height: 40px;
			background-color: white;
			border: 1px solid black;
			border-radius: 17px;
		}

		.imgLogo {
			width: 212px;
			height: 104px;
			border-radius: 11px;
			padding: 3px;
		}

		#dvProfileInfo * {
			display: block;
			color: white;
			text-align: center;
		}

		#dvNav {
			border-top: 1px solid white;
		}

		.dvParentMenu {
			padding: 5px;
			/* border: 1px solid white; */
		}

			.dvParentMenu a {
				display: block;
				border-bottom: 1px solid white;
			}

				.dvParentMenu a:hover {
					background-color: white;
					color: #0962ab !important;
				}

		.dvChildMenu a {
			padding-left: 28px;
			border-bottom: 1px solid white;
		}

		.footer {
			background-color: rgb(213 232 236) !important;
			padding: 0px;
			text-align: center;
		}

		.rms-mr-1 {
			margin-right: 1px;
		}

		.table > :not(caption) > * > * {
			padding: 1px;
		}

		.btn {
			padding: var(--bs-btn-padding-y) var(--bs-btn-padding-x) !important;
		}

		
	</style>
</head>
<body>
	<div class="row">
		<div id="dvMenu" class="col-sm-2 show">
			<div id="dvlogo" class="">
				<img class="imgLogo" src="~/images/logormsnextgen.png" />
			</div>
			<hr class="mt-0 mb-0 p-lg-1" />
			<div id="dvProfileInfo">
				<span>
					Welcome iConnect
				</span>
				<span>
					Administrator
				</span>
			</div>
			<div id="dvNav">
				<div class="row">
					<div class="col-12 dvParentMenu">
						<a onclick="toggleChildMenu(this);">Masters</a>
						<div class="row dvChildMenu d-none">
							<div class="col-12">
								<a asp-controller="Product" asp-action="ProductList">Products</a>
								<a>Product Categories</a>
								<a asp-controller="Suppliers" asp-action="SupplierList">Suppliers</a>
							</div>
						</div>
					</div>
					<div class="col-12 dvParentMenu">
						<a onclick="toggleChildMenu(this);">Transactions</a>
						<div class="row dvChildMenu d-none">
							<div class="col-12">
								<a asp-controller="Store" asp-action="StoreList">Stores</a>
								<a>Orders</a>
								<a>Employees</a>
								<a>Customers</a>
							</div>
						</div>
					</div>
					<div class="col-12 dvParentMenu">
						<a onclick="toggleChildMenu(this);">Reports</a>
						<div class="row dvChildMenu d-none">
							<div class="col-12">
								<!--TODO::-->

							</div>
						</div>
					</div>
					<div class="col-12 dvParentMenu">
						<i class="fas fa-sign-out-alt"></i><a>Logout</a>
					</div>
				</div>
			</div>
		</div>
		<div id="dvPage" class="col-sm-10 bg-body">
			<div class="row" style="background-color:#0962ab">
				<div class="col-1">
					<img id="imgHamburger" onclick="toggleMenu()" src="~/images/hamburger.png" />
				</div>
				<div class="col-10"></div>
				<div class="col-1">
					<img id="imgProfile" src="~/images/profileicon.png" />
				</div>
			</div>
			<div class="col-sm-12 bg-body dvPageContainer">
				<!--Page Content should load here -->
				@RenderBody()
			</div>
			<div class="footer bg-info">
				CopyRights Reserved iConnect Tech Solutions 2025
			</div>
		</div>

	</div>
	<script type="text/javascript">
		function toggleMenu() {
			var dvMenuControl = document.getElementById('dvMenu');
			var dvPageControl = document.getElementById('dvPage');
			dvMenuControl.classList.toggle('d-none');
			if (dvMenuControl.classList.contains('d-none')) {
				dvPageControl.classList.add('col-sm-12');
				dvPageControl.classList.remove('col-sm-10');
			} else {
				dvPageControl.classList.remove('col-sm-12');
				dvPageControl.classList.add('col-sm-10');
			}
		}
		function toggleChildMenu(aobj) {
			aobj.parentNode.children[1].classList.toggle('d-none');
		}
	</script>
</body>
</html>

