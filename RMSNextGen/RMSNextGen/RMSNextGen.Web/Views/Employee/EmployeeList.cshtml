
@{
	ViewData["Title"] = "Employee List";
	Layout = "~/Views/Shared/_RMSLayout.cshtml";
}
<div class="container">
	<div class="justify-content-between align-items-center">
		@* <h3 class="text-primary">Employee - </h3> *@
		<hr class="mt-0" />
		<h4 class="text-secondary">Employee/Search Employee</h4>
	</div>

	<form method="post" asp-action="SearchEmployee" asp-controller="Employee">
		<div class="card shadow-sm p-2">
			<div class="row g-3">
				<div class="col-sm-5 mr-1 px-2">
					<label for="EmployeeCode" class="form-label">Employee Code</label>
					<input type="text" class="form-control" id="EmployeeCode" name="EmployeeCode" placeholder="Enter Employee Code">
				</div>
				<div class="col-sm-5 mr-1 px-2">
					<label for="ContactNumber" class="form-label">Contact Number</label>
					<input type="text" class="form-control" id="ContactNumber" name="ContactNumber" placeholder="Contact Number">
				</div>
				<div class="col-sm-5 mr-1 px-2">
					<label for="StoreCode" class="form-label">Store Code</label>
					<select class="form-select" id="StoreCode" name="StoreCode">
						<option selected>Select</option>
						<option>Emp001</option>
						<option>Emp002</option>
						<option>Emp003</option>
						
					</select>
				</div>
				<div class="col-sm-5 mr-1 px-2">
					<label for="Role" class="form-label">Role</label>
					<select class="form-select" id="Role" name="Role">
						<option selected>Select</option>
						<option>Manager</option>
						<option>Sales</option>
					</select>
				</div>
			</div>
		</div>
		<div class="d-flex justify-content-end gap-2 mt-3">
			<button type="reset" class="btn btn-reset"><i class="bi bi-arrow-counterclockwise"></i> Clear</button>
			<button type="submit" class="btn btn-success"><i class="bi bi-search"></i> Search</button>
			<a class="btn btn-info" asp-action="AddNewEmployee" asp-controller="Employee">
				<i class="bi bi-plus-circle"></i> Add New Employee
			</a>
		</div>

	</form>
	@* <hr class="mt-0" /> *@
	<div class="table-responsive mt-2 p-2">
		<table class="table table-bordered table-hover shadow-sm">
			<thead class="table-dark">
				<tr>
					<th scope="col">S.NO</th>
					<th scope="col">Emp Code</th>
					<th scope="col">Emp Name</th>
					<th scope="col">Gender</th>
					<th scope="col">Salary</th>
					<th scope="col">Role</th>
					<th scope="col">StoreCode</th>
					<th scope="col">ContactNumber</th>
					<th scope="col">Status</th>
					<th scope="col" class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>1</td>
					<td>Emp001</td>
					<td>Raju</td>
					<td>Male</td>
					<td>$5.00</td>
					<td>Manager</td>
					<td>ST001</td>
					<td>78952</td>
					<td><a href="#" class="text-danger">Inactivate</a></td>
					<td class="text-center">
						<a asp-controller="Employee" asp-action="EditEmployee" class="btn btn-sm btn-warning">Edit</a>
						<a asp-controller="Employee" asp-action="ViewEmployee" class="btn btn-sm btn-info">View</a>
					</td>
				</tr>
				<tr>
					<td>2</td>
					<td>Emp002</td>
					<td>Ravi</td>
					<td>Male</td>
