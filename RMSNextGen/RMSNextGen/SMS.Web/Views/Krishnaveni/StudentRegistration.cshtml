@model SMS.Web.Models.KrishnaveniStudentViewModel
@{
	ViewData["Title"] = "StudentRegistration";
	Layout = null;
}
<div>
    <h1>StudentRegistration</h1>
	<form method="post">
			<div>
				<label>StudentCode</label>
				<input type="text" asp-for="StudentCode" />
			@*<input type="text" name="StudentCode"/>
			 //value="@Model.StudentCode" this is used for see the data in web page
			//asp-for="StudentCode" this is used for model binding *@
			</div>
			<div>
				<label>StudentName</label>
			<input type="text" asp-for="StudentName" />
			</div>
			<div>
				<label>DOB</label>
			<input type="date" asp-for="DOB" />
			</div>
			<div>
				<label>Gender</label>
				<input type="radio" asp-for="Gender" value="Male" />Male
			<input type="radio" asp-for="Gender" value="Female" />Female
			</div>
			<div>
				<label>Grade</label>
			<select asp-for="Grade">
					<option>Select</option>
					<option>Grade-1</option>
					<option>Grade-2</option>
					<option>Grade-3</option>
					<option>Grade-4</option>
					<option>Grade-5</option>
					<option>Grade-6</option>
					<option>Grade-7</option>
				</select>
			</div>

			<div>
				<label>IsOwnTransport</label>
			<input type="checkbox" asp-for="IsOwnTransport" />
			</div>
			<div>
				<label>Comments</label>
			<textarea asp-for="Comments">
				</textarea>
			</div>
			<div>
				<input type="submit" value="Save" />
			</div>
			<div>
			<label style="color:green">@ViewBag.Message</label>
			</div>
			@* <div>
				ViewData:@ViewData["StudentName"]
			</div>
			<div>
				ViewBag:@ViewBag.StudentLastName
			</div> *@
			
			
        </form>
</div> 