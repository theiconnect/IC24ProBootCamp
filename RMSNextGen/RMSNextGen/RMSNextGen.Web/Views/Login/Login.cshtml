@{
	Layout = "_LoginLayout";
}


<div>
	<form method="post" asp-controller="Login" asp-action="Login">
		<div>
			<label>Email/Phone:</label>
			<input type="text" id="txtEmail" name="txtEmail" class="input-control" />
		</div>
		<div>
			<label>Password:</label>
			<input type="password" id="txtPassword" name="txtPassword" class="input-control" />
		</div>
		<div>
			<a asp-controller="login" asp-action="sendotp">Forgot Password</a>
		</div>
		<div>
			<input type="submit" value="Login ->" id="btnLogin"  class="btn-login" />
		</div>
	</form>
</div>