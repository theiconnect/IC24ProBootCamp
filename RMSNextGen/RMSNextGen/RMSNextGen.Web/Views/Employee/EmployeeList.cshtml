					<td>Sales</td>
					<td>ST002</td>
					<td>85524</td>
					<td><a href="#" class="text-success">Activate</a></td>
					<td class="text-center">
						<a asp-controller="Employee" asp-action="EditEmployee" class="btn btn-sm btn-warning">Edit</a>
						<a asp-controller="Employee" asp-action="ViewEmployee" class="btn btn-sm btn-info">View</a>
					</td>
				</tr>
				<tr>
					<td>3</td>
					<td>Emp003</td>
					<td>Suresh</td>
					<td>Male</td>
					<td>$3.00</td>
					<td>Sales</td>
					<td>ST001</td>
					<td>954724</td>
					<td><a href="#" class="text-danger">Inactivate</a></td>
					<td class="text-center">
						<a asp-controller="Employee" asp-action="EditEmployee" class="btn btn-sm btn-warning">Edit</a>
						<a asp-controller="Employee" asp-action="ViewEmployee" class="btn btn-sm btn-info">View</a>
					</td>
				</tr>
				
			</tbody>
		</table>
	</div>
</div>

